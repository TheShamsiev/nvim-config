set ttimeout
set ttimeoutlen=1
set listchars=tab:>-,trail:~,extends:>,precedes:<,space:.
set ttyfast

syntax on
set tabstop=2
set shiftwidth=2
set expandtab
set ai
set number
set hlsearch
set ruler
set textwidth=80
set laststatus=2
set termguicolors
set relativenumber
set nowrap
colorscheme habamax
filetype plugin indent on

let g:netrw_banner=0
let g:netrw_liststyle=3
let g:netrw_winsize=25
autocmd FileType netrw setl bufhidden=delete
nnoremap <space>e :Lexplore<CR>

set nocompatible
set path+=**
set wildmenu

nnoremap <esc> :noh<return><esc>
nnoremap <esc>^[ <esc>^[
